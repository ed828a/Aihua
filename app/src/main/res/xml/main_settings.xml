        android:title="@string/settings_category_history_title"/>

    <PreferenceScreen
        android:fragment="com.dew.aihua.settings.preference_fragment.ContentSettingsFragment"
        android:icon="?attr/language"
        android:title="@string/content"/>

    <PreferenceScreen
        android:fragment="com.dew.aihua.settings.preference_fragment.UpdateSettingsFragment"
        android:icon="?attr/ic_settings_update"
        android:title="@string/settings_category_updates_title"
        android:key="update_pref_screen_key"/>

    <PreferenceScreen
        android:fragment="com.dew.aihua.settings.preference_fragment.DebugSettingsFragment"
        android:icon="?attr/bug"
